<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.olive.hr_management.dao.Hr_managementDao">

	<!-- 
		1. parameter 1개 : 생략  >> parameterType="int"
		2. parameter DTO 객체  >> parameterType="Emp"
		3. parameter 1개 이상 (DTO(x)) >> 만능 해결사 >> hashMap  >> parameterType="Map"
		4. mybatis parameter 값을 read 방법 : param1 , param2 , param3
		예) method(String field , String query) >> mapper  파일  >> param1 , param2
		parameter 1개 >> 불가 >> param1
	 -->
	 
	 <select id="getEmpList" resultType="com.olive.dto.Emp">
	 	SELECT empno FROM emp
	 </select>

	<insert id="insertNewEmp" parameterType="com.olive.dto.Emp">
		INSERT INTO emp (empno, ename, email, pwd, deptcode, positioncode, classcode, statuscode)
		VALUES (#{empNo}, #{ename}, #{email}, #{pwd}, #{deptCode}, #{positionCode}, #{classCode}, #{statusCode})
	</insert>

	<select id="selectAllList" resultType="com.olive.dto.Emp">
	    SELECT *
	    FROM emp
  </select>
</mapper>