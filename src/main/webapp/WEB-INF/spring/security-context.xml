                                               where e.empno = ?" />
			<security:password-encoder ref="bCryptPasswordEncoder"/> -->
			<security:user-service>
				<security:user name="1001" password="1004" authorities="ROLE_USER,ROLE_HR,ROLE_MANAGER,ROLE_GENERAL,ROLE_ADMIN"/>
				<security:user name="1002" password="1004" authorities="ROLE_USER,ROLE_HR,ROLE_MANAGER,ROLE_GENERAL"/>
				<security:user name="1003"  password="1004" authorities="ROLE_USER,ROLE_GENERAL,ROLE_MANAGER" />
				<security:user name="1004" password="1004" authorities="ROLE_USER,ROLE_GENERAL"/>
				<security:user name="1005" password="1004" authorities="ROLE_USER"/>
			</security:user-service>
		</security:authentication-provider>
	</security:authentication-manager>
	
	<!-- 커스텀 Login Fail Handler Bean 생성 : authentication-failure-handler-ref="loginFailHandler" -->
	<beans:bean id="loginFailHandler" class="com.olive.authentication.handler.LoginFailHandler" >
		<beans:property name="empno" value="empno"/>
		<beans:property name="pwd" value="pwd"/>
		<beans:property name="defaultFailureUrl" value="/goToLogin.do?error"/>
	</beans:bean>
</beans:beans>