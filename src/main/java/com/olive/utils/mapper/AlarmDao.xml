<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.olive.utils.dao.AlarmDao">

	<insert id ="insertAlarm" parameterType="com.olive.dto.Alarm">
	insert into alarm (alarmtime,empno,content,alarmcheck,color)
	values (now(),#{empno},#{content},0,#{color})
	</insert>
	
	<select id="getAlarmList">
		select alarmTime, content, color from alarm where empno=#{param1}
		limit #{param2},#{param3}
	</select>
</mapper>